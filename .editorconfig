# EditorConfig for GNU Stow
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{pl,pm,t}]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[{Makefile,Makefile.*,*.am,*.mk}]
indent_style = tab
indent_size = 8
